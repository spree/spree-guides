route '/user/inventory/*/' do
  location = item.identifier.gsub('/inventory/', '/')
  location.chop + ".html"
end

route '/release_notes/*/' do
  location = item.identifier.gsub('/release_notes/', '/release_notes/spree_')
  location.chop + ".html"
